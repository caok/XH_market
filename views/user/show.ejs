<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>
    <%= language.order.personalCenter[local] %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel='stylesheet' href='/stylesheets/style1.css' />
  <link rel="stylesheet" href="/stylesheets/stylePerson.css" />
  <link rel="stylesheet" href="/stylesheets/styleOrder.css" />
  <link rel="stylesheet" href="/stylesheets/cart.css" />
</head>

<body>
  <div id="contain">
    <% include ../header.ejs %>
    <div class="evaluate1">
      <ul class="ulPerson">
        <li class="orderNav1">
          <div style="margin-bottom: 10px;height: 45px;width: 100%;">
            <img src="/images/person.jpg" class="person_pic" /><span class="tdPerson"><%= current_user %></span>
          </div>
        </li>

        <li class="orderNav11">
          <a href="/orders" class="liPerson1">
            <%= language.order.allOrders[local] %>
            <div class="enterOrder">></div>
          </a>
        </li>
        <li class="orderNav11">
          <a class="liPerson1" href="/payment">
            <%= language.order.pendingPayment[local] %>
            <div class="enterOrder">></div>
          </a>
        </li>
        <li class="orderNav11">
          <a class="liPerson1 " href="/receiving">
            <%= language.order.uponReceipt[local] %>
            <div class="enterOrder">></div>
          </a>
        </li>
        <li class="orderNav11">
          <a class="liPerson1" href="/evaluation">
            <%= language.order.toBeEvaluated[local] %>
            <div class="enterOrder">></div>
          </a>
        </li>
        <li class="orderNav11">
          <a class="liPerson1" href="/returns">
            <%= language.order.returnGoods[local] %>
            <div class="enterOrder">></div>
          </a>
        </li>
        <li class="orderNav111">
          <a class="liPerson11" href="/user">
            <%= language.order.personalCenter[local] %>
            <div class="enterOrder">></div>
          </a>
        </li>
      </ul>
      <div class="dingdan">
        <div class="personMassege">
          <div class="personMassege2">
            <a name="accountExit" class="accountExit" href="/changepass"><%=language.order.changePassword[local]%></a>
            <div class="personMassege1"><%=language.order.personalCenter[local]%></div>
          </div>
          <div class="tableMessage">
            <div class="message">
              <%=language.order.name[local]%>：<%= user.name %>
            </div>
            <div class="message">
              <%=language.order.email[local]%>：<%= user.email %>
            </div>
            <% user.addresses.forEach(function(address){ %>
              <% if(address._id == user.curAddress){ %>
                <div class="message">
                  <%=language.order.address[local]%>：<%= address.street %>
                </div>
                <div class="message">
                  <%=language.order.tel[local]%>：<%= address.tel %>
                </div>
                <div class="message">
                  <%=language.order.code[local]%>：<%= address.postcode %>
                </div>
              <% } %>
            <% })%>
          </div>
        </div>
        <div class="clear"></div>
      </div>
      <div class="clear"></div>
    </div>
  </div>
  <% include ../footer.ejs %>
</body>

</html>
