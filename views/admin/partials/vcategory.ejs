<h3>视频分类</h3>

<div class='pull-right'>
  <a href="#/vcate/new" class="btn btn-primary btn-sm">
    <span class="glyphicon glyphicon-plus"></span>新建
  </a>
</div>

<table class="table table-hover">
  <thead>
  <tr>
    <td class="col-sm-1"></td>
    <td class="col-sm-3">名称</td>
    <td class="col-sm-4">名称(English)</td>
    <td class="col-sm-4">操作</td>
  </tr>
  </thead>
  <tbody>
  <tr ng-repeat="vcategory in vcategories">
    <td>{{$index + 1}}</td>
    <td>
      {{vcategory.name['zh']}}
    </td>
    <td>
      {{vcategory.name['en']}}
    </td>
    <td class="action">
      <a href="#/vcate/{{vcategory._id}}/video" class="btn btn-info btn-xs">
        <span class="glyphicon glyphicon-th"></span>详情
      </a>
      <a href="#/vcate/{{vcategory._id}}" class="btn btn-warning btn-xs">
        <span class="glyphicon glyphicon-edit"></span>编辑
      </a>
      <a href="javascript:void(0)" ng-click="rmVcategory(vcategory._id)" class="btn btn-danger btn-xs">
        <span class="glyphicon glyphicon-remove"></span>删除
      </a>
    </td>
  </tr>
  </tbody>
</table>
