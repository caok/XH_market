<h3>产品清单</h3>

<div class="pull-right">
  <a href="#/category/{{categoryId}}/product/new" class="btn btn-primary btn-sm">
    <span class="glyphicon glyphicon-plus">新建</span>
  </a>
</div>

<table class="table table-hover">
  <thead>
    <tr>
     <td></td>
     <td>名称</td>
     <td>单价</td>
     <td>剩余数量</td>
     <td>售出数量</td>
     <td>操作</td>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat="product in products">
      <td>{{$index + 1}}</td>
      <td>
        {{product.name['zh']}}
      </td>
      <td>
        {{product.price}}
      </td>
      <td>
        {{product.quantity}}
      </td>
      <td>
        {{product.selled}}
      </td>
      <td class="action">
        <a href="#/category/{{categoryId}}/product/{{product._id}}" class="btn btn-warning btn-xs">
          <span class="glyphicon glyphicon-edit"></span>编辑
        </a>
        <a href="javascript:void(0)" ng-click="rmProduct(product._id, categoryId)" class="btn btn-danger btn-xs">
          <span class="glyphicon glyphicon-remove"></span>删除
        </a>
      </td>
    </tr>
  </tbody>
</table>
