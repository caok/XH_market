<h3>视频清单</h3>

<div class="pull-right">
  <a href="#/vcate/{{vcategoryId}}/video/new" class="btn btn-primary btn-sm">
    <span class="glyphicon glyphicon-plus"></span>新建
  </a>
</div>

<table class="table table-hover">
  <thead>
    <tr>
     <td></td>
     <td>名称</td>
     <td>链接地址</td>
     <td>日期</td>
     <td>操作</td>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat="video in videos">
      <td>{{$index + 1}}</td>
      <td>
        {{video.name['zh']}}
      </td>
      <td>
        {{video.url}}
      </td>
      <td>
        {{video.happenedAt | date:"yyyy-MM-dd HH:mm"}}
      </td>
      <td class="action">
        <a href="#/vcate/{{vcategoryId}}/video/{{video._id}}" class="btn btn-warning btn-xs">
          <span class="glyphicon glyphicon-edit"></span>编辑
        </a>
        <a href="javascript:void(0)" ng-click="rmVideo(video._id, vcategoryId)" class="btn btn-danger btn-xs">
          <span class="glyphicon glyphicon-remove"></span>删除
        </a>
      </td>
    </tr>
  </tbody>
</table>
