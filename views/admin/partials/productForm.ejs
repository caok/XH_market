<div class="alert">
  {{alert}}
</div>

<div class="form-group">
  <label class="col-sm-2 control-label">名称: </label>
  <div class="col-sm-10">
    <input type="text" class="form-control" ng-model="product.name['zh']" required />
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label">英文名称: </label>
  <div class="col-sm-10">
    <input type="text" class="form-control" ng-model="product.name['en']" required />
  </div>
</div>

<div class="form-group" ng-show="product.images.length > 0">
  <label class="col-sm-2 control-label">封面图:</label>
  <div class="col-sm-10">
    <img class="small" ng-src="{{product.images[product.coverIndex]}}">
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label">图片:</label>
  <div class="col-sm-10">
    <span class="help-block">建议尺寸: 550*550px&nbsp;&nbsp;或&nbsp;&nbsp;相同长宽比例</span>
    <ul class="imglist">
      <li ng-repeat="img in product.images" >
        <button type="button" class="close" ng-click="product.images.splice($index, 1)">&times;</button>
        <span id="mark" ng-init="hstip();" class="glyphicon glyphicon-bookmark mark" data-toggle="tooltip" title="设置为封面" ng-click="product.coverIndex = $index"></span>
        <img class="theimg" ng-src="{{img}}">
      </li>
    </ul>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <span class="btn btn-success fileinput-button">
      <i class="glyphicon glyphicon-plus"></i>
      <span>上传图片</span>
      <input id="imgupload" type="file" fileupload name="files" data-url="/upload" multiple done="uploadFinished(e, data, 'images')">
    </span>
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label">单价: </label>
  <div class="col-sm-10">
    <input type="number" class="form-control" ng-model="product.price" required />
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label">数量: </label>
  <div class="col-sm-10">
    <input type="number" class="form-control" ng-model="product.quantity" required />
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label">状态: </label>
  <div class="col-sm-10">
    <select class="form-control" ng-model="product.state">
      <option value=0>可购买</option>
      <option value=1>不可购买</option>
    </select>
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label">产品说明: </label>
  <div class="col-sm-10">
    <script id="editor" type="text/plain" style="width:945px;height:500px;">
    </script>
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label">产品说明(English): </label>
  <div class="col-sm-10">
    <script id="editorEn" type="text/plain" style="width:945px;height:500px;">
    </script>
  </div>
</div>

<div id="submitDiv" class="container">
  <a class="btn btn-warning" href='#/category/{{product.categoryId}}/product'>撤销</a>
  <button class="btn btn-primary" ng-disabled="form.$invalid" ng-click="submit()">提交</button>
</div>
