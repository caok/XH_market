<h3>确认发货</h3>

{{alert}}

<div class="form-group">
  <label class="col-sm-2 control-label">订单编号: </label>

  <div class="col-sm-10" style="padding-top: 7px">
    {{order._id}}
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label">下单人: </label>

  <div class="col-sm-10" style="padding-top: 7px">
    {{order.userName}}
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label">总金额: </label>

  <div class="col-sm-10" style="padding-top: 7px">
    {{order.pay}}
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label">下单时间: </label>

  <div class="col-sm-10" style="padding-top: 7px">
    {{order.happenedAt | date:"yyyy-MM-dd HH:mm"}}
  </div>
</div>

<h3>收件人信息: </h3>
<div class="form-group">
  <label class="col-sm-2 control-label">收货人：</label>

  <div class="col-sm-10" style="padding-top: 7px">{{order.address.receiver}}</div>
</div>
<div class="form-group">
  <label class="col-sm-2 control-label">收货地址：</label>

  <div class="col-sm-10" style="padding-top: 7px">{{order.address.street}}</div>
</div>
<div class="form-group">
  <label class="col-sm-2 control-label">电话：</label>

  <div class="col-sm-10" style="padding-top: 7px">{{order.address.tel}}</div>
</div>
<div class="form-group">
  <label class="col-sm-2 control-label">邮编：</label>

  <div class="col-sm-10" style="padding-top: 7px">{{order.address.postcode}}</div>
</div>
<h3>物流信息</h3>
<div class="form-group">
  <label class="col-sm-2 control-label">物流公司: </label>

  <div class="col-sm-10" style="padding-top: 7px">
    <input type="text" class="form-control" ng-model='order.logisticsInfo.company' required/>
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label">订单编号: </label>

  <div class="col-sm-10" style="padding-top: 7px">
    <input type="text" class="form-control" ng-model='order.logisticsInfo.number' required/>
  </div>
</div>

<div id="submitDiv" class="container">
  <a class="btn btn-warning" href='#/order/{{order._id}}'>撤销</a>
  <button class="btn btn-primary" ng-disabled="form.$invalid || form.$pristine" ng-click="submit()">提交</button>
</div>
