//    $('.div_div').height(div_height + 285);
//  });
//  $('.error_div').css({ position: 'absolute', top: (($(window).height() - $('.error_div').height()) / 2)+ $(document).scrollTop(), left: (($(window).width() - $('.error_div').width()) / 2)+$(document).scrollLeft()}).show();

  $('.success_div').css({ position: 'absolute', top: (($(window).height() - $('.success_div').height()) / 2)+ $(document).scrollTop(), left: (($(window).width() - $('.success_div').width()) / 2)+$(document).scrollLeft()}).show();

  $('body').click(function(){
    $('.div_div').css("display","none")
  });
</script>
</html>
