<!DOCTYPE html>
<html>
<head>
  <title>
    <%=language.resetfist.reset[local]%>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel='stylesheet' href='/stylesheets/style1.css' />
</head>

<body>
  <div id="contain">
    <%include ../header.ejs%>
    <form action='/reset_pass' method='post'>
      <div class="centerreset">
        <div class="divreset1">
          <%if(local=='zh'){%>
          <div class="returnPassword">
            <%= language.resetfist.searchpass[local] %>
          </div>
          <%}if(local=='en'){%>
          <div class="returnPassword" style="width: 300px">
            <%= language.resetfist.searchpass[local] %>
          </div>
          <%}%>
        </div>
        <div class="divreset">
          <table style="width: 100%">
            <tr>
              <td class="div2 divreset2" style="width: 10%">
                <%=language.resetfist.name[local]%>
              </td>
              <td style="width: 20%">
                <div style="width: 90%;height: 3px;background-color: #c7c7c7;margin-left: auto;margin-right: auto"></div>
              </td>
              <td class="div2 divreset2" style="width:10%">
                <%=language.resetfist.identity[local]%>
              </td>
              <td style="width:20%">
                <div style="width: 90%;height: 3px;background-color: #c7c7c7;margin-left: auto;margin-right: auto"></div>
              </td>
              <td class="div2 divreset2" style="width:10%">
                <%=language.resetfist.reset[local]%>
              </td>
              <td style="width:20%">
                <div style="width: 90%;height: 3px;background-color: #c7c7c7;margin-left: auto;margin-right: auto"></div>
              </td>
              <td class="div2" style="width:10%;text-align: left;padding-left: 1em">
                <%=language.resetfist.success[local]%>
              </td>
            </tr>
          </table>
        </div>
        <div class="divreset3" style="margin-bottom: 60px">
          <!--<div class="divResetIn">-->
            <!--<div class="userspan"><%=language.resetfist.email[local]%></div>-->
            <!--<div class="resetBo">-->
              <!--<input name='email' type='text'  class="inputreset" placeholder="<%=language.resetfist.email2[local]%>"/>-->
            <!--</div>-->
            <!--<div class="clear"></div>-->
          <!--</div>-->
          <% if (locals.error) { %>
            <div class="error_font" style="text-align: left"><%= locals.error %></div>
          <% } %>

          <div class="divResetIn">
            <div class="userspan1">
              <%=language.resetfist.newpassword[local]%>
            </div>
            <div class="resetBo1">
              <input type="password" name="password" class="inputreset2" />
            </div>
            <div class="clear"></div>
          </div>
          <div class="reset">
            <%= language.resetfist.text1[local] %>
            </br>
            <%= language.resetfist.text2[local] %>
          </div>
          <div class="divResetIn">
            <div class="userspan1">
              <%= language.resetfist.newpassword2[local] %>
            </div>
            <div class="resetBo1">
              <input type="password" name="password_confirmation" class="inputreset2"/>
            </div>
            <div class="clear"></div>
          </div>
          <div>
            <input type='hidden' name='name' value='<%= name %>'>
            <input type='hidden' name='key' value='<%= key %>'>
            <input type="submit" name="submit" value="<%= language.resetfist.submit[local] %>" class="continue"  />
          </div>
        </div>
      </div>
    </form>
  </div>
  <%include ../footer.ejs%>
</body>
</html>
